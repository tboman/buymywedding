rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /photos/{userId}/{allPaths=**} {
      // Anyone can read (so images display in the browser)
      allow read: if true;
      // Only the authenticated owner can write to their own folder
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
